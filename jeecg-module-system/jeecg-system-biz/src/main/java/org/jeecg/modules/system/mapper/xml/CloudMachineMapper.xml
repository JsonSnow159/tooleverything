<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.system.mapper.CloudMachineMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.system.entity.CloudMachine">
        <result column="id" property="id"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="area" property="area"/>
        <result column="ip" property="ip"/>
        <result column="port" property="port"/>
        <result column="status" property="status"/>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_at,
        updated_at,
        is_deleted,
        area, ip, port, status
    </sql>


    <sql id="table">
        cloud_machine
    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="table"/>
        where status = 1 and is_deleted = 0
    </select>

    <select id="findByPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="table"/>
        where is_deleted = 0
        limit #{offset},#{pageSize}
    </select>

    <select id="count" resultType="int">
        select
        count(*)
        from
        <include refid="table"/>
        where is_deleted = 0
    </select>

    <select id="findDetail" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        <include refid="table"/>
        where id = #{id}
    </select>



    <insert id="insert">
        insert into
        <include refid="table"/>
        (area,ip,port
        <if test="status != null">
            ,status
        </if>
        )
        values
        (#{area}, #{ip}, #{port}
        <if test="status != null">
            ,#{status}
        </if>)
    </insert>

    <update id="update">
        update
        <include refid="table" />
        set updated_at = now()
        <if test="area != null">
            , area = #{area}
        </if>
        <if test="ip != null">
            , ip = #{ip}
        </if>
        <if test="port != null">
            , port = #{port}
        </if>
        <if test="status != null">
            , status = #{status}
        </if>
        where id = #{id}
    </update>

    <delete id="delete">
        update
        <include refid="table" />
        set is_deleted = 1
        where id = #{id}
    </delete>
</mapper>
